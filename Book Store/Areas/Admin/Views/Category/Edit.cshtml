
@model Category
<div class="card shadow border-0 mt-4 ">
    <div class="accordion-header bg-secondary bg-gradient ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">Update Category</h2>
            </div>

        </div>
    </div>
</div>
<div class="card-body p-4">
    <form method="post" class="row">
        <div class="border p-3">
        
            <div class="form-floating py-2 col-12">
                <lable class="m-2">Name</lable>
                <input asp-for="Name" class="form-control border-0 shadow" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-floating py-2 col-12">
                <lable class="m-2">Display Order</lable>
                <input asp-for="DisplayOrder" class="form-control border-0 shadow" />
                <span asp-validation-for="DisplayOrder" class="text-danger"></span>
            </div>
            <div class="row mt-3">
                <div class="col-6 col-md-3">
                    <button type="submit" class="btn btn-primary form-control">Update</button>
                </div>
                <div class="col-6 col-md-3">
                    <a asp-controller="Category" asp-action="Index" class="btn btn btn-outline-primary border form-control">
                        Back To List
                    </a>
                </div>
            </div>
        </div>

    </form>
</div>
@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial"></partial>
    }
}
